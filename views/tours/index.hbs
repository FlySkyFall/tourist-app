<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="{{csrfToken}}">
  <title>Туры - Краснодарский край</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100 font-sans">
  {{> navbar}}

  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold mb-6">Туры по Краснодарскому краю</h1>

      <form id="tour-filter-form" class="mb-8 bg-gray-100 p-6 rounded-lg">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label for="type" class="block text-gray-700 mb-2">Тип тура:</label>
            <select id="type" name="type" class="w-full border rounded-lg px-4 py-2">
              <option value="all" {{#if (eq currentType 'all')}}selected{{/if}}>Все</option>
              <option value="active" {{#if (eq currentType 'active')}}selected{{/if}}>Активный</option>
              <option value="excursion" {{#if (eq currentType 'excursion')}}selected{{/if}}>Экскурсионный</option>
              <option value="camping" {{#if (eq currentType 'camping')}}selected{{/if}}>Кемпинг</option>
              <option value="health" {{#if (eq currentType 'health')}}selected{{/if}}>Оздоровительный</option>
              <option value="passive" {{#if (eq currentType 'passive')}}selected{{/if}}>Пассивный</option>
            </select>
          </div>
          <div>
            <label for="search" class="block text-gray-700 mb-2">Поиск:</label>
            <input type="text" id="search" name="search" value="{{currentSearch}}" class="w-full border rounded-lg px-4 py-2" placeholder="Название или описание">
          </div>
          <div>
            <label for="region" class="block text-gray-700 mb-2">Регион:</label>
            <select id="region" name="region" class="w-full border rounded-lg px-4 py-2">
              <option value="" {{#unless currentRegion}}selected{{/unless}}>Все регионы</option>
              {{#each regions}}
                <option value="{{this.name}}" {{#if (eq ../currentRegion this.name)}}selected{{/if}}>{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div>
            <label for="minPrice" class="block text-gray-700 mb-2">Минимальная цена:</label>
            <input type="number" id="minPrice" name="minPrice" value="{{currentMinPrice}}" class="w-full border rounded-lg px-4 py-2" placeholder="₽">
          </div>
          <div>
            <label for="maxPrice" class="block text-gray-700 mb-2">Максимальная цена:</label>
            <input type="number" id="maxPrice" name="maxPrice" value="{{currentMaxPrice}}" class="w-full border rounded-lg px-4 py-2" placeholder="₽">
          </div>
          <div>
            <label for="startDate" class="block text-gray-700 mb-2">Дата начала сезона:</label>
            <input type="date" id="startDate" name="startDate" value="{{currentStartDate}}" class="w-full border rounded-lg px-4 py-2">
          </div>
          <div>
            <label for="endDate" class="block text-gray-700 mb-2">Дата конца сезона:</label>
            <input type="date" id="endDate" name="endDate" value="{{currentEndDate}}" class="w-full border rounded-lg px-4 py-2">
          </div>
          <div>
            <label for="sortBy" class="block text-gray-700 mb-2">Сортировка:</label>
            <select id="sortBy" name="sortBy" class="w-full border rounded-lg px-4 py-2">
              <option value="" {{#unless currentSortBy}}selected{{/unless}}>Без сортировки</option>
              <option value="price-asc" {{#if (eq currentSortBy 'price-asc')}}selected{{/if}}>Цена: по возрастанию</option>
              <option value="price-desc" {{#if (eq currentSortBy 'price-desc')}}selected{{/if}}>Цена: по убыванию</option>
              <option value="rating-desc" {{#if (eq currentSortBy 'rating-desc')}}selected{{/if}}>Рейтинг: по убыванию</option>
            </select>
          </div>
          <div>
            <label for="minDuration" class="block text-gray-700 mb-2">Мин. продолжительность (дни):</label>
            <input type="number" id="minDuration" name="minDuration" value="{{currentMinDuration}}" class="w-full border rounded-lg px-4 py-2" placeholder="Дни">
          </div>
          <div>
            <label for="maxDuration" class="block text-gray-700 mb-2">Макс. продолжительность (дни):</label>
            <input type="number" id="maxDuration" name="maxDuration" value="{{currentMaxDuration}}" class="w-full border rounded-lg px-4 py-2" placeholder="Дни">
          </div>
        </div>
        <div class="mt-4">
          <label class="block text-gray-700 mb-2">Удобства:</label>
          {{#each amenitiesList}}
            <label class="inline-flex items-center mr-4">
              <input type="checkbox" name="amenities" value="{{this}}" {{#includes ../currentAmenities this}}checked{{/includes}} class="form-checkbox">
              <span class="ml-2">{{this}}</span>
            </label>
          {{/each}}
        </div>
        <button type="submit" class="mt-4 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded">Фильтровать</button>
      </form>

      {{#if error}}
        <p class="text-red-600 mb-4">{{error}}</p>
      {{/if}}

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each tours}}
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="{{this.images.[0]}}" alt="{{this.title}}" class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-semibold mb-2">{{this.title}}</h3>
              <p class="text-gray-600 mb-2">{{truncate this.description 100}}</p>
              <p class="text-blue-600 font-bold mb-2">{{this.price}} ₽</p>
              <p class="mb-2"><strong>Тип:</strong> 
                {{#if (eq this.type 'active')}}Активный
                {{else if (eq this.type 'excursion')}}Экскурсионный
                {{else if (eq this.type 'camping')}}Кемпинг
                {{else if (eq this.type 'health')}}Оздоровительный
                {{else}}Пассивный{{/if}}
              </p>
              <p class="mb-2"><strong>Продолжительность:</strong> {{this.durationDays}} дней</p>
              <p class="mb-2"><strong>Регион:</strong> {{this.location.region}}</p>
              <p class="mb-2"><strong>Рейтинг:</strong> {{this.rating}} ({{this.reviewsCount}} отзывов)</p>
              <a href="/tours/{{this._id}}" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded inline-block">Подробнее</a>
            </div>
          </div>
        {{else}}
          <p class="text-gray-600">Туры не найдены.</p>
        {{/each}}
      </div>

      {{#if totalPages}}
        <div class="mt-8 flex justify-center">
          <nav class="inline-flex">
            {{#if (gt currentPage 1)}}
              <a href="/tours?page={{subtract currentPage 1}}&type={{currentType}}&search={{currentSearch}}®ion={{currentRegion}}&minPrice={{currentMinPrice}}&maxPrice={{currentMaxPrice}}&startDate={{currentStartDate}}&endDate={{currentEndDate}}&sortBy={{currentSortBy}}&minDuration={{currentMinDuration}}&maxDuration={{currentMaxDuration}}&amenities={{currentAmenities}}" class="px-3 py-2 bg-gray-200 hover:bg-gray-300 rounded-l">Предыдущая</a>
            {{/if}}
            {{#each (range 1 totalPages)}}
              <a href="/tours?page={{this}}&type={{../currentType}}&search={{../currentSearch}}®ion={{../currentRegion}}&minPrice={{../currentMinPrice}}&maxPrice={{../currentMaxPrice}}&startDate={{../currentStartDate}}&endDate={{../currentEndDate}}&sortBy={{../currentSortBy}}&minDuration={{../currentMinDuration}}&maxDuration={{../currentMaxDuration}}&amenities={{../currentAmenities}}" class="px-3 py-2 {{#if (eq this ../currentPage)}}bg-blue-600 text-white{{else}}bg-gray-200 hover:bg-gray-300{{/if}}">{{this}}</a>
            {{/each}}
            {{#if (lt currentPage totalPages)}}
              <a href="/tours?page={{add currentPage 1}}&type={{currentType}}&search={{currentSearch}}®ion={{currentRegion}}&minPrice={{currentMinPrice}}&maxPrice={{currentMaxPrice}}&startDate={{currentStartDate}}&endDate={{currentEndDate}}&sortBy={{currentSortBy}}&minDuration={{currentMinDuration}}&maxDuration={{currentMaxDuration}}&amenities={{currentAmenities}}" class="px-3 py-2 bg-gray-200 hover:bg-gray-300 rounded-r">Следующая</a>
            {{/if}}
          </nav>
        </div>
      {{/if}}
    </div>
  </section>

  {{> footer}}

  <script src="/js/tour-filter.js"></script>
</body>
</html>